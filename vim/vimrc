"set statusline=%4*%<\%m%<[%f\%r%h%w]\ %=\[Position=%l,%v,%p%%]

"Automatically remove trailing whitespace
function RemoveTrailingWhitespace()
    if &ft != "diff"
        let b:curcol = col(".")
        let b:curline = line(".")
        silent! %s/\s\+$//
        silent! %s/\(\s*\n\)\+\%$//
        call cursor(b:curline, b:curcol)
    endif
endfunction
autocmd BufWritePre * call RemoveTrailingWhitespace()

